{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Doxygen",
      "type": "shell",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/doc"
      },
      "command": "doxygen Jidai.doxyfile"
